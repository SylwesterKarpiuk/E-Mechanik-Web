@model IEnumerable<E_Mechanik_Web.Models.AvailableServiceCategory>
@{
    var list = new List<string>();

    ViewBag.Title = "E-mechanik";
}

<div class="jumbotron">
    <h1>E-mechanik</h1>
    <p class="lead">Najlepsza wyszukiwarka somochodowych usług serwisowych</p>
</div>
<div>@DateTime.Now.Second</div>

<div class="row">
    <form method="get">
        <input type="text" name="search" />
        <input type="submit" />
    </form>
    @foreach (var category in Model)
    {
        list = new List<string>();
        <div class="col-md-4">
            <h2>@category.Name</h2>
            <ul>
                @foreach (var product in category.Services)
                {
                    if (!list.Contains(product.Name))
                    {
                        list.Add(product.Name);
                        <li>@Html.ActionLink(@product.Name, "GetServicesByName", new { Controller = "Services", name = product.Name }) </li>
                    }

                }
            </ul>
        </div>
    }
</div>
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-mechanik samochodowe usługi serwisowe</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-color:#fefefe">

        
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="top-logo-layout container">
            <div class="layout-logo-left"></div>
            <img class="top-logo-image" src="~/Content/Images/logo.png" />
        </div>

        <div class="container" style="margin-top:5px">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Strona główna", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Wiadmości", "Index", "Messages")</li>
                    <li>@Html.ActionLink("Usługi", "Index", "Services")</li>
                    <li>@Html.ActionLink("Kategorie", "Index", "AvailableServiceCategories")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Dostępne kategorie usług", "Index", "AvailableServiceCategories")</li>
                            <li>@Html.ActionLink("Dostępne usługi", "Index", "AvailableServices")</li>
                        }
                    }


                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="containers">
        <div class="box-content-layout container"  style="background-color:#fdfdfd">
            @RenderBody()
        </div>
        <hr />
        <div class="box-footer-layout">
            <footer>
                <p>E-mechanik&copy; - @DateTime.Now.Year</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

@model E_Mechanik_Web.Models.IndexViewModel
@{
    ViewBag.Title = "Zarządzaj";
}

<div class="box-main" style="color:white">
    <div class="box-left" style="width:200px; margin-top:120px;">
        <div style="width:200px; height:200px; border:1px solid black; background-color:whitesmoke">
            <div style="width:180px; height:180px;margin-top:10px; margin-left:10px; border:1px solid black; background-color:white">
                <img src="@Url.Content(Model.File)" style="width:160px; height:160px; margin-top:10px;" />
            </div>

        </div>

    </div>
    <div style="border-left:1px solid #d1d1d1;height:500px"></div>
    <div class="box-right" style="display:inline-block; text-align:left">

        <div style="border:1px solid black; padding:5px; background-color:rgb(255,255,255)">
            <div style="border:1px solid black; padding-left:10px; padding-bottom:50px; background-color:rgba(0,0,0,0.7); color:whitesmoke">

                <div style="margin-left:70px;">
                    <h2>Panel użytkownika</h2>
                </div>

                <div class="customHr" style="margin-top:15px; margin-bottom:15px; margin-right:130px; position:relative; "></div>


                @if (User.IsInRole("Mechanic"))

                {
                    <div style="margin-bottom:15px; font-size:17px;border-bottom:1px solid grey">
                        <b>@Html.ActionLink("Edytuj profil", "EditMechanicProfile", null, new { style = "color:whitesmoke" })</b>
                    </div>

                    <div style="margin-bottom:15px; font-size:15px;border-bottom:1px solid grey">
                        <b>     @Html.ActionLink("Edytuj numer telefonu", "EditClientProfile", null, new { style = "color:whitesmoke" })</b>
                    </div>

                }

                @if (User.IsInRole("Client"))
                {
                    <div style="margin-bottom:15px; font-size:15px;border-bottom:1px solid grey">
                        <b>   @Html.ActionLink("Edytuj numer telefonu", "EditClientProfile", null, new { style = "color:whitesmoke" })</b>
                    </div>
                }
                <div style="margin-bottom:10px; font-size:17px;border-bottom:1px solid grey">
                    <b> @Html.ActionLink("Zmień hasło", "ChangePassword", null, new { style = "color:whitesmoke" })</b>
                </div>

                <div class="customHr" style="margin-top:20px; margin-bottom:-30px; margin-right:130px; position:relative; "></div>
            </div>
        </div>
    </div>
</div>

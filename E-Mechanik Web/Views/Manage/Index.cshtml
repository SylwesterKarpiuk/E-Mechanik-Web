@model E_Mechanik_Web.Models.IndexViewModel
@{
    ViewBag.Title = "Zarządzaj";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Zmień ustawienia konta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Hasło:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Zmień hasło", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Utwórz", "SetPassword")
            }
            ]

        </dd>

        @if (User.IsInRole("Mechanic"))

        {
            <dt>Profil: </dt>
            <dd>
                [
                @Html.ActionLink("Edytuj profil", "EditMechanicProfile")
                ]
            </dd>
            <dt>Numer telefonu: </dt>
            <dd>
                [
                @Html.ActionLink("Edytuj numer telefonu", "EditClientProfile")
                ]
            </dd>
        }

        @if (User.IsInRole("Client"))
        {
            <dt>Numer telefonu: </dt>
            <dd>
                [
                @Html.ActionLink("Edytuj numer telefonu", "EditClientProfile")
                ]
            </dd>
        }

    </dl>
</div>

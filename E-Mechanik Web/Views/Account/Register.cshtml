@model E_Mechanik_Web.Models.RegisterViewModel



<div class="main-box-register">
    <div class="center-box-register">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h3>Utwórz nowe konto</h3>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div>
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-5 control-label" })  @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div>
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-5 control-label" })  @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div>
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 control-label" })  @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div>
                    @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-5 control-label" })  @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">

                <b class="col-md-5 control-label">Rejestruj jako</b>

                <div class="form-control-static" style="text-align:left">
                    Client @Html.RadioButtonFor(m => m.Role, "Client")
                    &nbsp
                    Mechanic @Html.RadioButtonFor(m => m.Role, "Mechanic")
                </div>
            </div>
            <div class="form-group">
                <div>
                    <input type="submit" class="btn btn-default" value="Zarejestruj" />
                </div>
            </div>
        }
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model E_Mechanik_Web.Models.MechanicProfiles




        <hr style="height:1px; background-color:black;" />
        <h3 style="margin-left:50px;">Uzupełnij swój profil</h3>
   
        <hr style="height:1px; background-color:black;" />
        <div class="box-main">

        <div class="spaceBox"></div>

            <div class="fillProfileBox ">


                @using (Html.BeginForm("FillMechanicProfile", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group CloserS" style="display:flex; ">
                        @Html.LabelFor(model => model.MechanicName, new { @class = "custom-text-form ", style = "padding-top:7.5px;" })
                        @Html.EditorFor(model => model.MechanicName, new { htmlAttributes = new { @class = "custom-input-form custom-input-form-2", @readonly = "true", style= "background-color:rgba(34,34,34,0.05)" } })
                        @Html.ValidationMessageFor(model => model.MechanicName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group CloserS" style="display:flex">
                        @Html.LabelFor(model => model.CompanyName, htmlAttributes: new { @class = "custom-text-form", style = "padding-top:7.5px" })
                        @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "custom-input-form custom-input-form-2" } })
                        @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group CloserS" style="display:flex">
                        @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "custom-text-form", style = "padding-top:7.5px" })
                        @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "custom-input-form custom-input-form-2" } })
                        @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group CloserS" style="display:flex;">
                        @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "custom-text-form", style = "padding-top:7.5px" })
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "custom-input-form custom-input-form-2" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group" style="display:flex; margin-top:-9px" >

                        @Html.Label("Dodaj miniaturkę: ", htmlAttributes: new { @class = "custom-text-form" })
                        <input type="file" id="fileId" name="postedFile" class="custom-input-form custom-input-form-2" style="margin-top:4px; text-align:right; padding-top:5px; width:350px" />
                    </div>
                    <div class="form-group" style="display:block; text-align:center; margin-right:120px;">
                        <input type="submit" value="Wyślij" class="btn btn-default" />
                    </div>
                }
            </div>
        </div>


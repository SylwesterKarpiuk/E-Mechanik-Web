@model E_Mechanik_Web.Models.Service

<div class="box-main">
    <div class="box-left" style="width:200px; margin-top:120px;">
        <div style="width:200px; height:200px; border:1px solid black; background-color:whitesmoke">
            <div style="width:180px; height:180px;margin-top:10px; margin-left:10px; border:1px solid black; background-color:white">
                <img src="@Url.Content(Model.mechanicProfile.ImagePatch)" style="width:160px; height:160px; margin-top:10px;" />
            </div>

        </div>


    </div>
    <div style="border-left:1px solid #d1d1d1;height:500px"></div>
    <div class="box-right" style="display:inline-block; text-align:left">

        <div style="border:1px solid black; padding:5px; background-color:rgb(255,255,255)">
            <div style="border:1px solid black; padding-left:10px; padding-bottom:50px; background-color:rgba(0,0,0,0.8); color:whitesmoke">

                <div style="margin-left:70px; margin-bottom:20px;">
                    <h1>@Model.mechanicProfile.CompanyName</h1>
                </div>
                <div class="customHr" style="margin-top:-15px; margin-bottom:20px; margin-right:130px; position:relative; "></div>
                <div style="margin-bottom:10px; font-size:17px;border-bottom:1px solid grey">
                    <b>Email:</b> <b>@Model.mechanicProfile.MechanicName</b>
                </div>

                <div style="margin-bottom:10px; font-size:15px;border-bottom:1px solid grey">
                    <b>Adres: </b>
                    <b>@Model.mechanicProfile.Address</b>
                </div>


                <div style="margin-bottom:10px; padding-left:53px; font-size:15px;border-bottom:1px solid grey">
                    <b>@Model.mechanicProfile.City</b>
                </div>
                <div style="margin-top:50px; margin-bottom:-30px; margin-left:100px;">
                    <button class="btn btn-default">@Html.ActionLink("Wyślij wiadomość", "DirectMessage", "Messages", new { to = Model.MechanicName } , null)</button>
                    <button class="btn btn-default">Oceń</button>
                </div>

            </div>
        </div>
    </div>
</div>
<p>
    <button class="btn btn-default">
        @Html.ActionLink("Lista serwisów", "GetServiceByName", "Services", new { name = Model.Name }, null)
    </button> 
  
</p>
